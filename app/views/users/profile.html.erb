<div class="container">
<div class="row">
  <div class="col-3">
      <%= render "users/shared/bubun" %>
  </div>

<div class="cccc">
 <div class="aaaa">
 <h3>プロフィール</h3>
  <table>
   <tbody>
    <%= form_with model:@user, url: user_path(@user), local: true do |f| %>
     <tr>
      <td><%= f.label :アイコン画像 %></td>
      <td><%= attachment_image_tag @user, :profileimage, fallback: "no_image_logo.png", size: '120x120' %>
        <label><%= check_box_tag :image_delete %>画像なし</label>
        <label><%= f.attachment_field :profileimage %></label>
      </td>
     </tr>
    <tr>
     <td><%= f.label :名前 %></td>
     <td><%= f.text_field :name, autofocus: true, required: true, maxlength: "40", size: "40" %></td>
    </tr>
    <tr>
     <td><%= f.label :自己紹介 %></td>
     <td><%= f.text_area :profile, autofocus: true,  size: '40x5' %></td>
    </tr>
    <tr>
     <td><%= f.submit "更新する", class: 'btn btn-primary' %></td>
    <% end %>
    </tr>
   </tbody>
  </table>
 </div>
</div>
 
</div>
</div>
<div class="row">
  <div class="col-3">
  </div>
  <div class="col-9">
  <h3>新しいアカウントを作成</h3>
  <%= render "users/shared/error_messages", resource: resource %>
  <table class="subtable">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <tbody>
      <tr>
        <td><div class="logo">必須</div></td>
        <td><%= f.text_field :name, autofocus: true, :placeholder => "ユーザー名", size: '30' %></td>
      </tr>
      <tr>
        <td><div class="logo">必須</div></td>
        <td> <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス", size: '30' %></td>
      </tr>
      <tr>
        <td><div class="logo">必須</div></td>
        <td><%= f.password_field :password, autocomplete: "new-password", :placeholder => "パスワード", size: '30' %></td>
      </tr>
      <tr>
        <td><div class="logo">必須</div></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "パスワード確認", size: '30' %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "新しいアカウントを作成", class: 'btn btn-primary' %></td>
      </tr>
      <% end %>
      <tr>
        <td></td>
        <td><%= link_to 'すでにアカウントをお持ちの方はログイン', new_user_session_path %></td>
      </tr>
    </tbody>
  </table>
 </div>
</div>

    
    
    

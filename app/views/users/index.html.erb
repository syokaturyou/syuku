<%= render "users/shared/bubun" %>

<div class="right">
<h3>ユーザー一覧</h3>

 <table>
  <tr>
   <th>id</th>
   <th>名前</th>
   <th>メールアドレス</th>
   <th>パスワード</th>
   <th>パスワード</th>
   <th>自己紹介</th>
   <th>アイコン画像</th>
  </tr>
  <% @users.each do |user| %>
  <tr>
   <td><%= user.id %></td>  
   <td><%= user.name %></td> 
   <td><%= user.email %></td>
   <td><%= user.password %></td>
   <td><%= user.encrypted_password %></td>
   <td><%= user.profile %></td>
   <td><%= attachment_image_tag user, :profileimage, fallback: "no_image_logo.png", size: '80x80' %></td>
   <td><%= link_to '削除する', user_path(user), method: :delete, class: 'btn btn-danger', data: { confirm: "本当に削除しますか？" }%></td>
   </tr>
   <% end %>
 </table>
 </div>
<div class="row">
  <div class="col-2">
      <%= render "shared/room" %>
  </div>

<div class="col-10">
<div class="out">
 <div class="in">
<h3>ルーム情報登録</h3>
 <%= render "shared/error", obj: @room %>
 
 <%= form_with(model: @room, local: true) do |f| %>
  <table class="acounttable">
    <tr>
      <th><%= f.label :roomname ,"ルーム名" %></th>
      <th><div class="aa">必須</div></th>
      <td><%= f.text_field :roomname, size: "40", :placeholder => "ルーム名を入力", class: 'form-control' %></td>
    </tr>
    <tr>
      <th><%= f.label :roomprofile ,"ルーム紹介" %></th>
      <th><div class="aa">必須</div></th>
      <td><%= f.text_area :roomprofile, size: '40x5', :placeholder => "ルーム説明を入力", class: 'form-control' %></td>
    </tr>
    <tr>
      <th><%= f.label :price ,"料金" %></th>
      <th><div class="aa">必須</div></th>
      <td><%= f.number_field :price, :placeholder => "一日辺りの料金を入力", class: 'form-control' %></td>
    </tr>
    <%= f.hidden_field :user_id, :value => params[:user_id] %>
    <tr>
      <th><%= f.label :address, "住所" %></th>
      <th><div class="aa">必須</div></th>
      <td><%= f.text_field :address, :placeholder => "住所を入力", class: 'form-control' %></td>
    </tr>
    <tr>
      <th><%= f.label :ルーム画像 %></th>
      <th><div class="aa">必須</div></th>
      <td><%= f.attachment_field :roomimage %></td>
    </tr>
    <tr>
      <th></th>
      <th></th>
      <td><%= f.submit "登録", class: 'btn btn-primary' %></td>
    </tr>
  </table>

  
  <% end %>

</div>
</div>
</div>
 
</div>

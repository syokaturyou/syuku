 <h2>予約</h2>
 
 <table class="acounttable">
   <tbody>
    <tr>
     <td>￥<%= @room.price %> /日</td>
    </tr>
    <%= form_with(model: @reservation, local: true) do |f| %>
    <tr>
      <th><%= f.label :startdate ,"開始日" %></th>
      <td><%= f.date_field :startdate, class: 'date' %></td>
    </tr>
    <tr>
      <th><%= f.label :enddate ,"終了日" %></th>
      <td><%= f.date_field :enddate, class: 'date' %></td>
    </tr>
　　<tr>
     <td>使用人数</td>
     <th><%= f.label :使用人数 %></th>
     <td><%= f.number_field :human, autofocus: true %></td>
    </tr>
    
    <%= f.submit "予約する", class: 'btn btn-primary' %>
    <% end %>
   </tbody>
  </table>